{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "principalId": {
      "type": "string"
    },
    "scopeId": {
      "type": "string"
    },
    "roleId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2019-04-01-preview",
      "name": "[guid(parameters('scopeId'), parameters('principalId'), parameters('roleId'))]",
      "properties": {
        "roleDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/roleDefinitions/', parameters('roleId'))]",
        "principalId": "[parameters('principalId')]",
        "scope": "[parameters('scopeId')]"
      }
    }
  ]
}