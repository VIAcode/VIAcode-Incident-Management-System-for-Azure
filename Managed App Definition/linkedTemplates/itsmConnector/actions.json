{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "connectorName": {
      "type": "string"
    }
  },
  "variables": {
    "agName": "VIMSActionGroup",
    "arName": "VIMSActionRule",
    "actionGroupAppiVersion": "2019-03-01",
    "actionRuleApiVersion": "2019-05-05-preview",
    "functionAppApiVersion": "2018-11-01"
  },
  "resources": [
    {
      "name": "[variables('agName')]",
      "type": "Microsoft.Insights/ActionGroups",
      "apiVersion": "[variables('actionGroupAppiVersion')]",
      "location": "global",
      "properties": {
        "groupShortName": "VIMSAG",
        "enabled": true,
        "azureFunctionReceivers": [
          {
            "name": "Create incident",
            "functionAppResourceId": "[resourceId('Microsoft.Web/sites', parameters('connectorName'))]",
            "functionName": "ProcessAlert",
            "useCommonAlertSchema": true,
            "httpTriggerUrl": "[listSecrets(resourceId('Microsoft.Web/sites/functions', parameters('connectorName'), 'EntrancePoint'),variables('functionAppApiVersion')).trigger_url]"
          }
        ]
      }
    },
    {
      "location": "global",
      "type": "Microsoft.AlertsManagement/actionRules",
      "name": "[variables('arName')]",
      "apiVersion": "[variables('actionRuleApiVersion')]",
      "properties": {
        "status": "Enabled",
        "type": "ActionGroup",
        "description": "VIAcode Incident Management System for Azure Action Rule",
        "actionGroupId": "[resourceId('Microsoft.Insights/ActionGroups', variables('agName'))]"
      }
    }
  ]
}