  "functions": [
    {
      "namespace": "locations",
      "members": {
        "pairedLocation": {
          "parameters": [
            {
              "name": "location",
              "type": "string"
            },
            {
              "name": "regions",
              "type": "object"
            }
          ],
          "output": {
            "type": "string",
            "value": "[first(parameters('regions')[parameters('location')].pairedRegions)]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "apiVersion": "[variables('appApiVersion')]",
      "name": "[variables('functionName')]",
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "location": "[locations.pairedLocation(parameters('location'), variables('regions'))]",
      "dependsOn": [

      ],
      "properties": {
        "httpsOnly": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarmName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', parameters('connectorAIName')), '2018-05-01-preview').InstrumentationKey]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('connectorStorageName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('connectorStorageName')),variables('storageAccountApiVersion')).keys[0].value)]"
            },
            {
              "name": "AzureWebJobsSecretStorageType",
              "value": "Files"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[parameters('connectorFilesPath')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "KeyVaultUrl",
              "value": "[parameters('keyVaultUri')]"
            },
            {
              "name": "ZammadUrl",
              "value": "[parameters('zammadUrl')]"
            }
          ]
        }
      },
      "identity": {
        "type": "SystemAssigned"
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "value": "[reference(concat(resourceId('Microsoft.Web/sites', variables('functionName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), variables('managedIdentityApiVersion')).principalId]"
    }
  }
