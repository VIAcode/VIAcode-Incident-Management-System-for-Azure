{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "providerFilesPath": {
      "type": "string"
    },
    "keyVaultUri": {
      "type": "string"
    },
    "vimsUrl": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "aIName": {
      "type": "string"
    },
    "serverfarmName": {
      "type": "string"
    },
    "namePrefix": {
      "type": "string"
    }
  },
  "variables": {
    "storageAccountApiVersion": "2018-07-01",
    "appInsightsApiVersion": "2015-05-01",
    "servicePlanApiVersion": "2016-09-01",
    "appApiVersion": "2016-03-01",
    "managedIdentityApiVersion": "2015-08-31-PREVIEW",
    "providerApiName": "[concat(parameters('namePrefix'), '-prv-', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "[variables('appApiVersion')]",
      "name": "[variables('providerApiName')]",
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "location": "[parameters('location')]",
      "properties": {
        "httpsOnly": true,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarmName'))]",
        "clientCertEnabled": true,
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', parameters('aIName')), variables('appInsightsApiVersion')).InstrumentationKey]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageName')),variables('storageAccountApiVersion')).keys[0].value)]"
            },
            {
              "name": "AzureWebJobsSecretStorageType",
              "value": "Files"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[parameters('providerFilesPath')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "KeyVaultUrl",
              "value": "[parameters('keyVaultUri')]"
            },
            {
              "name": "ZammadUrl",
              "value": "[parameters('vimsUrl')]"
            }
          ]
        }
      },
      "identity": {
        "type": "SystemAssigned"
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "value": "[reference(concat(resourceId('Microsoft.Web/sites', variables('providerApiName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), variables('managedIdentityApiVersion')).principalId]"
    },
    "appName": {
      "type": "string",
      "value": "[variables('providerApiName')]"
    }
  }
}