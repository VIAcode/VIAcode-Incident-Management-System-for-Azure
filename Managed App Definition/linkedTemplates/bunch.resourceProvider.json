{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "linkedTemplates": {
      "type": "object"
    },
    "location": {
      "type": "string"
    },
    "providerFilesPath": {
      "type": "string"
    },
    "keyVaultUri": {
      "type": "string"
    },
    "vimsUrl": {
      "type": "string"
    },
    "vimsAppId": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "aiName": {
      "type": "string"
    },
    "serverfarmName": {
      "type": "string"
    }
  },
  "variables": {
    "deploymentApiVersion": "2018-02-01",
    "SLAworkbooksDisplayName": "VIMS reports"
  },
  "resources": [
    {
      "apiVersion": "[variables('deploymentApiVersion')]",
      "name": "deployProviderApi",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('linkedTemplates').resourceProvider.resourceProviderApi]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "providerFilesPath": {
            "value": "[parameters('providerFilesPath')]"
          },
          "keyVaultUri": {
            "value": "[parameters('keyVaultUri')]"
          },
          "vimsUrl": {
            "value": "[parameters('vimsUrl')]"
          },
          "storageName": {
            "value": "[parameters('storageName')]"
          },
          "aIName": {
            "value": "[parameters('aIName')]"
          },
          "serverfarmName": {
            "value": "[parameters('serverfarmName')]"
          },
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          }
        }
      }
    },
    {
      "apiVersion": "[variables('deploymentApiVersion')]",
      "name": "deployResourceProvider",
      "dependsOn": [
        "deployProviderApi"
      ],
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('linkedTemplates').resourceProvider.resourceProvider]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "apiName": {
            "value": "[reference('deployProviderApi', variables('deploymentApiVersion')).outputs.appName.value]"
          },
          "vimsAppId": {
            "value": "[parameters('vimsAppId')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "value": "[reference('deployProviderApi', variables('deploymentApiVersion')).outputs.principalId.value]"
    }
  }
}
