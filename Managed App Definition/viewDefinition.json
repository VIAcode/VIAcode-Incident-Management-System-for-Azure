{
  "$schema": "https://schema.management.azure.com/schemas/viewdefinition/0.0.1-preview/ViewDefinition.json#",
  "views": [
    {
      "kind": "Overview",
      "properties": {
        "header": "VIAcode Incident Management System for Azure",
        "description": "",
        "commands": [
          {
           "displayName": "Restart VIMS",
            "icon": "Refresh",
            "path": "restartVIMS"
          },
          {
            "displayName": "Renew AAD Integration",
            "icon": "Link",
            "path": "renewADIntegration",
            "createUIDefinition": {
              "parameters": {
                "steps": [
                  {
                    "name": "appReg",
                    "label": "Application Registration Parameters",
                    "subLabel": {
                      "preValidation": "Enter Application Registration ID and Secret",
                      "postValidation": "Done"
                    },
                    "bladeTitle": "Application Registration Parameters",
                    "bladeSubtitle": "Enter Application Registration ID and Secret",
                    "elements": [
                      {
                        "name": "id",
                        "label": "Id",
                        "type": "Microsoft.Common.TextBox",
                        "defaultValue": "",
                        "toolTip": "Type Application Registration Id",
                        "constraints": {
                          "required": true
                        }

                      },
                      {
                        "name": "secret",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                          "password": "Secret",
                          "confirmPassword": "Confirm secret"
                        },
                        "toolTip": "Type Application Registration Secret",
                        "constraints": {
                          "required": true,
                          "regex": "",
                          "validationMessage": ""
                        },
                        "options": {
                          "hideConfirmation": true
                        },
                        "visible": true
                      }
                    ]
                  }
                ],
                "outputs": {
                  "id": "[steps('appReg').id]",
                  "secret": "[steps('appReg').secret]"
                }
              }
            }
          }
        ]
      }
    },
    {
        "kind": "Metrics",
        "properties": {
            "displayName": "Metrics",
            "version": "1.0.0",
            "charts": [
                {
                    "displayName": "Storage availability",
                    "chartType": "Line",
                    "metrics": [
                        {
                            "name": "Availability",
                            "aggregationType": "avg",
                            "resourceType": "Microsoft.Storage/storageAccounts",
                            "namespace": "Microsoft.Storage/storageAccounts"
                        }
                    ]
                },
                {
                  "displayName": "Storage capacity",
                  "chartType": "Line",
                  "metrics": [
                    {
                      "name": "UsedCapacity",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Storage/storageAccounts",
                      "namespace": "Microsoft.Storage/storageAccounts"
                    }
                  ]
                },
                {
                  "displayName": "VIMS service status",
                  "chartType": "Area",
                  "metrics": [
                    {
                      "name": "CpuPercentage",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/serverfarms",
                      "namespace": "Microsoft.Web/serverfarms"
                    },
                    {
                      "name": "MemoryPercentage",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/serverfarms",
                      "namespace": "Microsoft.Web/serverfarms"
                    },
                    {
                      "name": "TcpEstablished",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/serverfarms",
                      "namespace": "Microsoft.Web/serverfarms"
                    },
                    {
                      "name": "TcpTimeWait",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/serverfarms",
                      "namespace": "Microsoft.Web/serverfarms"
                    },
                    {
                      "name": "Requests",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/sites",
                      "namespace": "Microsoft.Web/sites"
                    },
                    {
                      "name": "AverageResponseTime",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/sites",
                      "namespace": "Microsoft.Web/sites"
                    },
                    {
                      "name": "AppConnections",
                      "aggregationType": "avg",
                      "resourceType": "Microsoft.Web/sites",
                      "namespace": "Microsoft.Web/sites"
                    }
                  ]
                },
                {
                  "displayName": "Vims statistics",
                  "chartType": "Scatter",
                  "metrics": [
                    {
                    "name": "Users",
                    "aggregationType": "avg",
                    "resourceType": "microsoft.insights/components",
                    "namespace": "azure.applicationinsights"                    
                  },
                  {
                    "name": "Tickets",
                    "aggregationType": "avg",
                    "resourceType": "microsoft.insights/components",
                    "namespace": "azure.applicationinsights"                    
                  }
                ]
                }
            ]
        }
    }
  ]
}