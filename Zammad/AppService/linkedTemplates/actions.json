{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "connectorName": {
      "type": "string"
    }
  },
  "variables": {
    "agName": "ZammadActionGroup"
  },
  "resources": [
    {
      "name": "[variables('agName')]",
      "type": "Microsoft.Insights/ActionGroups",
      "apiVersion": "2019-03-01",
      "location": "global",
      "properties": {
        "groupShortName": "ZammadAG",
        "enabled": true,
        "azureFunctionReceivers": [
          {
            "name": "Create incident",
            "functionAppResourceId": "[resourceId('Microsoft.Web/sites', parameters('connectorName'))]",
            "functionName": "ProcessAlert",
            "useCommonAlertSchema": true,
            "httpTriggerUrl": "[listSecrets(resourceId('Microsoft.Web/sites/functions', parameters('connectorName'), 'EntrancePoint'),'2018-11-01').trigger_url]"
          }
        ]
      }
    },
    {
      "location": "global",
      "type": "Microsoft.AlertsManagement/actionRules",
      "name": "ZammadActionRule",
      "apiVersion": "2019-05-05-preview",
      "properties": {
        "status": "Enabled",
        "type": "ActionGroup",
        "description": "VIAcode Incident Management System for Azure Action Rule",
        "actionGroupId": "[resourceId('Microsoft.Insights/ActionGroups', variables('agName'))]"
      }
    },
    {
      "type": "microsoft.insights/activityLogAlerts",
      "name": "ServiceHealthAlertRule",
      "apiVersion": "2017-04-01",
      "location": "Global",
      "tags": {},
      "scale": null,
      "properties": {
        "scopes": [
          "[subscription().id]"
        ],
        "condition": {
          "allOf": [
            {
              "field": "category",
              "equals": "ServiceHealth"
            }
          ]
        },
        "actions": {
          "actionGroups": [
            {
              "actionGroupId": "[resourceId('Microsoft.Insights/ActionGroups', variables('agName'))]"
            }
          ]
        },
        "enabled": true,
        "description": "VIAcode Incident Management System for Azure Service Health Alert Rule"
      },
      "dependsOn": []
    }
  ]
}